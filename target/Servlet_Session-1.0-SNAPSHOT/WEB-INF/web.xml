<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         metadata-complete="false" version="4.0">
    <!-- metadata-complete取值为true，表示关闭注解支持 -->
    <!-- metadata-complete取值为false，表示启用注解支持 -->
    <display-name>servletDemo</display-name>
    <servlet>
        <!--指定 Servlet 的名称-->
        <servlet-name>LoginTimeSessionServlet</servlet-name>
        <!--Servlet 的完整限定名（包名+类名）-->
        <servlet-class>mao.servlet_session.LoginTimeSessionServlet</servlet-class>
    </servlet>
    <!--定义 Servlet 与 URL 之间的映射-->
    <servlet-mapping>
        <!-- Servlet 的名称和虚拟路径-->
        <servlet-name>LoginTimeSessionServlet</servlet-name>
        <url-pattern>/LoginTimeSessionServlet</url-pattern>
    </servlet-mapping>

    <servlet>
            <!--指定 Servlet 的名称-->
            <servlet-name>SencodTimeServlet</servlet-name>
            <!--Servlet 的完整限定名（包名+类名）-->
            <servlet-class>mao.servlet_session.SencodTimeServlet</servlet-class>
        </servlet>
        <!--定义 Servlet 与 URL 之间的映射-->
        <servlet-mapping>
            <!-- Servlet 的名称和虚拟路径-->
            <servlet-name>SencodTimeServlet</servlet-name>
            <url-pattern>/SencodTimeServlet</url-pattern>
        </servlet-mapping>
    <!--设置session的过期时间-->
    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>
</web-app>